{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container mb-5 ">
        <h2 class="text-center mt-5">Connexion</h2>
        <div class="row">
            <div class="col-md-3">
                &nbsp;
            </div>
            <div class="col-md-6 mt-5 bg-secondary py-3">
                {% if hasError %}
                    <div class="alert alert-danger">
                        Le nom d'utilisateur ou le mot de passe est invalide !
                    </div>
                {% endif %}

                <form action=" {{path('account_login')}} " method="post">
                    <div class="form-group">
                        <label for="email"></label>
                        <input type="text" name="_username" id="email" placeholder="username..." class="form-control" value=" {{username}} " required>
                    </div>
                    <div class="form-group">
                        <label for="password"></label>
                        <input type="password" name="_password" id="password" placeholder="Mot de passe..." class="form-control" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
