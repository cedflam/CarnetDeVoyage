{% extends 'base.html.twig' %}

{% block title %} nom s√©jour {% endblock %}

{% block body %}
    <div id="page_content ">

        <!--HEADER IMAGE-->
        <section id="bg-blog-detail-img" class="bg-blog-detail-img">
            <div class="overlay"></div>
        </section>

        <div class="container ">
            <div class="row">
                <h2 class="mt-3 mb-3">{{ article.titre }} </h2>

            </div>

            <!--Carousel-->
            <div class="col-12 mb-3 bg-dark ">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in article.images %}
                            <li data-target="#carouselExampleIndicators"
                                data-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" {% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in article.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ asset('/uploads/' ~ image.image) }}" class="d-block w-100" alt="...">
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <!--Article-->
            <p class="text-justify mb-3"><span>{{ article.contenu | nl2br }}</span>
            </p>

            <a href="{{ path('article_edit', {'id': article.id }) }}" class="btn btn-sm btn-primary mb-3">Modifier l'article</a>
        </div>



    </div>


    </div>
{% endblock %}
