{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="mt-5">Article index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Ville</th>
                <th>Département</th>
                <th>Note Séjour</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                    <td>{{ article.ville }}</td>
                    <td>{{ article.departement }}</td>
                    <td>{{ article.noteCamping }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="{{ path('article_show', {'id': article.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-sm btn-primary" href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Pas d'enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-sm btn-primary mb-3" href="{{ path('article_new') }}">Nouvel Article</i></a>
    </div>
{% endblock %}
